<main>
    <section class="section-pt section-pb bg-dark-blue">
        <div class="container">
            <div class="booking-wrapper">

                <div>
                    <div class="section-title-sm text-green text-center mb-40px">
                        Please fill the form below to become a Caddie
                    </div>
                    <div class="section-title-sm text-white text-center mb-40px">
                        <%=flash.now[:notice]%>
                    </div>

                    <%= form_with url: caddieapplied_path, local: true, html: { class: "from-grid-col-2" } do |form| %>

                        <div class="form-icon-wrapper">
                            <%= image_tag "user-gray.png", class: "form-icon", alt: "user icon" %>
                            <%= form.text_field :full_name, class: "input-default", placeholder: "Enter your full name" %>
                        </div>
                        <div class="form-icon-wrapper">
                            <%= image_tag "mail-gray.png", class: "form-icon", alt: "mail icon" %>
                            <%= form.email_field :email, class: "input-default", placeholder: "Email address" %>
                        </div>
                        <div class="form-icon-wrapper">
                            <%= image_tag "calendar-gray.png", class: "form-icon" %>
                            <%= form.text_field :caddying_experience, class: "input-default", placeholder: "Years of experience are you caddying?" %>
                        </div>
                        <div class="form-icon-wrapper">
                            <%= image_tag "gender.png", class: "form-icon" %>
                            
                            <%= form.select :gender, ['Gender', 'Male', 'Female'] %>

                        </div>
                        <div class="form-icon-wrapper">
                            <%= image_tag "golf-gray.png", class: "form-icon" %>
                            <%= form.select :golf_experience, ['How many years of golfing experience do you have?' , 1 ,2,3,4,5,6,7,'8+'] %>
                        </div>
                        <div class="form-icon-wrapper">
                            <%= image_tag "telephone.png", class: "form-icon" %>
                            <%= form.number_field :phone_number, class: "input-default", placeholder: "Phone number" %>
                        </div>
                        <div class="text-area-col">
                            <%= form.text_area :comments, placeholder: "Comments (Optional)", cols: "30", rows: "8" %>
                        </div>
                        

                      <div class="form-icon-wrapper">
                        <%= form.file_field :image %>
                        </div>

                        <%= form.submit "Apply Now", class: "btn btn-green" %>

                    <% end %>
                    
                </div>
            </div>
    </section>
</div>
</main>
